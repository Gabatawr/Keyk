<Window x:Class="Keyk.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:cmd="clr-namespace:Keyk.Infrastructure.Commands"
        xmlns:vm="clr-namespace:Keyk.ViewModels"

        WindowStyle="None" AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"

        Height="450" MinHeight="150"
        Width="800" MinWidth="150"

        Background="#F333"
        
        vm:MouseCommands.MouseLeftButtonDown="{Binding MoveApplicationCommand}">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>

        <!-- WinControlButton -->
        <Style x:Key="WinControlButton" TargetType="Button">

            <Setter Property="Height" Value="14"/>
            <Setter Property="Width" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="100">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.75"/>
                </Trigger>
                <Trigger Property="IsMouseDirectlyOver" Value="True">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>

        </Style>

        <!-- AppControlButton -->
        <Style x:Key="AppControlButton" TargetType="Button">

            <Setter Property="Height" Value="14"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="6, 6"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.75"/>
                </Trigger>
                <Trigger Property="IsMouseDirectlyOver" Value="True">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>

        </Style>

        <cmd:MinimizeApplicationCommand x:Key="MinimizeApplicationCommand"/>
        <cmd:CloseApplicationCommand x:Key="CloseApplicationCommand"/>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*" MinWidth="150"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Height="75" Width="Auto"
              HorizontalAlignment="Left" VerticalAlignment="Top"
              Background="Black">

        </Grid>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Top">

            <Grid>
                <Button ToolTip="Start"
                        Style="{StaticResource AppControlButton}"
                        Background="LawnGreen">
                </Button>

                <Button ToolTip="Stop"
                        Style="{StaticResource AppControlButton}"
                        Background="Red"
                        Visibility="Collapsed">
                </Button>

                <Grid Height="14" Width="30" HorizontalAlignment="Right"
                      Margin="6,6">

                    <Button ToolTip="Minimize"
                            HorizontalAlignment="Left" 
                            Style="{StaticResource WinControlButton}"
                            Background="Orange"
                            Command="{StaticResource MinimizeApplicationCommand}">
                    </Button>

                    <Button ToolTip="Close"
                            HorizontalAlignment="Right" 
                            Style="{StaticResource WinControlButton}"
                            Background="Red"
                            Command="{StaticResource CloseApplicationCommand}">
                    </Button>

                </Grid>
            </Grid>

            <Border Height="14"
                    Margin="6,6" CornerRadius="6">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1">
                        <GradientStop Offset="0" Color="LimeGreen"/>
                        <GradientStop Offset="0.5" Color="Orange"/>
                        <GradientStop Offset="1" Color="Red"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border x:Name="DifficultyBorder" ToolTip="Difficulty"
                        Opacity="0.6" Margin="0.5,0.5" CornerRadius="6"
                        vm:MouseCommands.MouseMove="{Binding DifficultyChangedCommand}"
                        vm:MouseCommands.MouseLeftButtonDown="{Binding DifficultyChangedCommand}">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,1">
                            <GradientStop Offset="{Binding Difficulty}" Color="Transparent"/>
                            <GradientStop Offset="{Binding Difficulty}" Color="Black"/>
                        </LinearGradientBrush>
                    </Border.Background>

                </Border>
            </Border>

            <Border Background="#F222"
                    CornerRadius="8"
                    Margin="6,6"
                    Padding="12,0">

                <Grid Height="18">

                    <WrapPanel HorizontalAlignment="Left">

                        <TextBlock Foreground="White"
                                   HorizontalAlignment="Left">
                            Speed:</TextBlock>
                        <TextBlock HorizontalAlignment="Right"
                                   Foreground="White"
                                   Margin="4,0,0,0">
                            0</TextBlock>
                    </WrapPanel>

                    <WrapPanel HorizontalAlignment="Right">
                        <TextBlock Foreground="White">
                            Fails:</TextBlock>
                        <TextBlock Foreground="White"
                                   Margin="4,0,0,0">
                            0</TextBlock>
                    </WrapPanel>

                </Grid>
            </Border>
        </StackPanel>

    </Grid>
</Window>